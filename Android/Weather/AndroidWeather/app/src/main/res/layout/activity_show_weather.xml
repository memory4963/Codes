<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="weather.mufengjun260.com.androidweather.ShowWeatherActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="城市名字"
        android:id="@+id/tvOfCityName"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="空气质量"
        android:id="@+id/tvOfAirCondition"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvOfCityName"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="今日指数"
        android:id="@+id/tvOfIndexs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:layout_below="@+id/tvOfCityName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="感冒指数"
        android:id="@+id/tvOfColdIndex"
        android:layout_below="@+id/tvOfIndexs"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="污染指数"
        android:id="@+id/tvOfPollutionIndex"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="穿衣指数"
        android:id="@+id/tvOfDressingIndex"
        android:layout_below="@+id/tvOfIndexs"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="洗车指数"
        android:id="@+id/tvOfWashIndex"
        android:layout_alignTop="@+id/tvOfPollutionIndex"
        android:layout_alignStart="@+id/tvOfDressingIndex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="今日天奇"
        android:id="@+id/tvOfTodayDayTime"
        android:layout_below="@+id/tvOfCityName"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="今日气温"
        android:id="@+id/tvOfTodayTemperature"
        android:layout_below="@+id/tvOfTodayDayTime"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="今天日期"
        android:id="@+id/tvOfTodayDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="今天星期"
        android:id="@+id/tvOfTodayWeek"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvOfTodayDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="今日风力"
        android:id="@+id/tvOfTodayWind"
        android:layout_below="@+id/tvOfTodayTemperature"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="预报"
        android:id="@+id/tvOfFuture"
        android:layout_below="@+id/tvOfWashIndex"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvOfFuture1"
        android:layout_below="@+id/tvOfFuture"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvOfFuture2"
        android:layout_below="@+id/tvOfFuture1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvOfFuture3"
        android:layout_below="@+id/tvOfFuture2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvOfFuture4"
        android:layout_below="@+id/tvOfFuture3"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/tvOfFuture5"
        android:layout_below="@+id/tvOfFuture4"
        android:layout_alignParentStart="true" />

</RelativeLayout>
